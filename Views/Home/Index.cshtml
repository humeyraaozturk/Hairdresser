        function checkStatus(requestId) {
            const apiUrl = `/GetResult?requestId=${requestId}`;
            $.get(apiUrl, function (data) {
                if (data.result) {
                    // İşlenmiş resmi modalda göster
                    $('#imageModal .modal-body img').attr('src', data.result);
                    $('#imageModal').modal('show');
                } else {
                    console.error('Processing failed or no result found.');
