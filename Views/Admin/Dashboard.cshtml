                        </div> *@
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </div>

                <!-- Randevu Durumu -->
                <div class="tab-pane fade" id="appointment-status" role="tabpanel" aria-labelledby="appointment-status-tab">
                    <h3>Randevu Durumu</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kullanıcı</th>
                                <th>Hizmet</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* @if (ViewBag.Appointments != null && ((List<Appointment>)ViewBag.Appointments).Count > 0)
                            {
                            @if (ViewBag.Appointments.Count > 0)
                            {
                            @foreach (var appointment in ViewBag.Appointments)
                            {
                            <tr>
                            <td>@appointment.AppointmentID</td>
                            <td>@appointment.User.FullName</td>
                            <td>@appointment.Service.Name</td>
                            <td>@appointment.Date</td>
                            <td>@appointment.Status</td>
                            <td>
                            <form method="post" action="/Admin/UpdateAppointmentStatus">
                            <input type="hidden" name="AppointmentId" value="@appointment.AppointmentID" />
                            <button name="Status" value="Onaylandı" class="btn btn-success btn-sm">Onayla</button>
                            <button name="Status" value="İptal Edildi" class="btn btn-danger btn-sm">İptal Et</button>
                            </form>
                            </td>
