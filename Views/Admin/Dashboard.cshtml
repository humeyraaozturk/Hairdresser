                        <div class="mb-3">
                        <label for="employeePosition" class="form-label">Pozisyon</label>
                        <input type="text" class="form-control" id="employeePosition" name="Position" required>
                        </div> *@
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>

                <!-- Çalışan Sil -->
                <div class="tab-pane fade" id="remove-employee" role="tabpanel" aria-labelledby="remove-employee-tab">
                    <h3>Çalışan Sil</h3>
                    <form method="post" action="/Admin/RemoveEmployee">
