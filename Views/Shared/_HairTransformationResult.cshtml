@{
}
@{
    var imageUrl = ViewBag.TransformedImageUrl as string;
    var errorMessage = ViewBag.ErrorMessage as string;
}

@if (!string.IsNullOrEmpty(imageUrl))
{
    <div>
        <h3>Transformed Image:</h3>
        <img src="@imageUrl" alt="Transformed Hair Image" class="img-fluid" />
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div>
        <h3>Error:</h3>
        <p>@errorMessage</p>
    </div>
}
