@{
}

@model IEnumerable<Employee>

<section>
    <h2>Employee</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Expertise</th>
                <th>Available Hours</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FullName</td>
                    <td>@employee.Service.Name</td>
                    <td>@employee.AvailableHours</td>
                </tr>
            }
        </tbody>
    </table>
</section>
